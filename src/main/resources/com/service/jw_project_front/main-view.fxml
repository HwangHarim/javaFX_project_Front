<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="800" prefWidth="600" spacing="10" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.service.jw_project_front.controller.MainController">
      <!-- 상단 시간 표시 영역 -->
      <HBox alignment="CENTER" VBox.vgrow="NEVER">
            <Label fx:id="timeLabel" prefHeight="37.0" prefWidth="264.0" alignment="CENTER" text="날짜 시간">
                  <padding>
                        <Insets bottom="10" left="10" right="10" top="10" />
                  </padding>
            </Label>
      </HBox>

      <!-- 중단 2*2 버튼 영역 -->
      <GridPane alignment="CENTER" hgap="10" vgap="10" VBox.vgrow="ALWAYS">
            <Button prefHeight="180.0" prefWidth="280.0" text="Button 1" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <Button prefHeight="180.0" prefWidth="280.0" text="Button 2" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            <Button prefHeight="180.0" prefWidth="280.0" text="Button 3" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <Button prefHeight="180.0" prefWidth="280.0" text="Button 4" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <columnConstraints>
                  <ColumnConstraints />
                  <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
            </rowConstraints>
      </GridPane>

      <!-- 하단 가로로 3개의 버튼 영역 -->
      <HBox alignment="CENTER" spacing="10" VBox.vgrow="NEVER">
            <Button prefHeight="35.0" prefWidth="180.0" text="Button 5" HBox.hgrow="ALWAYS" />
            <Button prefHeight="35.0" prefWidth="180.0" text="Button 6" HBox.hgrow="ALWAYS" />
            <Button prefHeight="35.0" prefWidth="180.0" text="Button 7" HBox.hgrow="ALWAYS" />
      </HBox>
</VBox>
